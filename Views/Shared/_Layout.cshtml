<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Product Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-gradient shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand text-white fw-bold" href="@Url.Action("Index", "ProductRegistration")">
                <i class="bi bi-box"></i> Product Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    @if (Session["UserEmail"] == null)
                    {
                        <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Login", "ProductRegistration")">Login</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("SignUp", "ProductRegistration")">Sign Up</a></li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarProfile"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @Session["UserEmail"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("UserDashboard","ProductRegistration")">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a>
                                </li>
                                @*<li>
                                    <a class="dropdown-item" href="@Url.Action("EditProfile","ProductRegistration")">
                                        <i class="bi bi-pencil-square"></i> Edit Profile
                                    </a>
                                </li>*@
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout","ProductRegistration")">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Push content below navbar -->
    <div style="padding-top: 80px;"></div>

    <!-- Main Content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center py-3 mt-4 bg-light border-top">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year Product Portal. All rights reserved.</p>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        window.addEventListener("load", function () {
            document.body.classList.add("loaded");
        });
    </script>

</body>
</html>
