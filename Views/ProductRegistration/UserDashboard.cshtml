@model List<Product_Registration_Portal.Models.User>
@{
    ViewBag.Title = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";   // ✅ use layout
}
<style>
    .custom-table td, .custom-table th {
        vertical-align: middle;
        text-align: center; /* ensures centering */
    }
</style>

<div class="container mt-4">
    <!-- Profile Section -->
    <div class="d-flex align-items-center mb-4">
        <div class="position-relative">
            <img src="~/Content/images/default-profile.png" class="rounded-circle shadow-sm"
                 style="width: 60px; height: 60px; object-fit: cover;" alt="Profile Picture" />
        </div>

        <div class="ms-3">
            <h4>@Session["UserName"]</h4>
            <p class="text-muted">@Session["UserEmail"]</p>

            <!-- Update Profile button -->
            <button type="button" class="btn btn-primary"
                    onclick="location.href='@Url.Action("EditUser","ProductRegistration", new { id = Session["UserID"] })'">
                <i class="bi bi-pencil-square"></i> Update Profile
            </button>
        </div>
    </div>

    <h2>User Dashboard</h2>

    <!-- Users Table -->
    <div class="table-responsive">
        <table class="table custom-table">
            <thead class="table-dark">
                <tr>
                    <th>UserId</th>
                    <th>ProfileImage</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Role</th>
                    <th>IsActive</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td class="text-center">
                            <img src="@Url.Content(user.ProfileImage ?? "~/Content/images/default-profile.png")"
                                 class="rounded-circle shadow-sm d-block mx-auto"
                                 style="width:50px; height:50px; object-fit:cover;" />
                        </td>

                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.City</td>
                        <td>@user.Country</td>
                        <td>@user.Role</td>
                        <td>@user.IsActive</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Exit + Register Product buttons -->
    <div class="mt-3">
        <button type="button" class="btn btn-danger"
                onclick="location.href='@Url.Action("Logout","ProductRegistration")'">
            <i class="bi bi-box-arrow-right"></i> Exit
        </button>

        @if (Session["UserRole"] != null && Session["UserRole"].ToString().ToLower() == "admin")
        {
            <button type="button" class="btn btn-success ms-2"
                    onclick="location.href='@Url.Action("RegisterProduct","ProductRegistration")'">
                <i class="bi bi-plus-circle"></i> Register Product
            </button>
        }
    </div>
</div>

<!-- Toast Notifications -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    @if (TempData["LoginMessage"] != null)
    {
        <div class="toast align-items-center text-bg-success border-0 show" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["LoginMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast"></button>
            </div>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast align-items-center text-bg-primary border-0 show" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var toastElList = [].slice.call(document.querySelectorAll('.toast'));
            toastElList.map(function (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
            });
        });
    </script>
}
